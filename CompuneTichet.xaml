            </Button.Style>
        </Button>
        <TextBlock x:Name="mesajtrimis" HorizontalAlignment="Left" Height="24" Margin="48,426,0,0" TextWrapping="Wrap" Text="Tichet Trimis !" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" FontWeight="Bold" Width="120" Foreground="#FF15FF06" RenderTransformOrigin="0.063,0.546" Visibility="Collapsed"/>
