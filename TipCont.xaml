        <TextBlock HorizontalAlignment="Left" Height="55" Margin="64,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="276"><InlineUIContainer/><Run Foreground="White" FontWeight="Bold" FontSize="36" FontFamily="Arial" Text="       Ce esti ?"/><LineBreak/></TextBlock>

        <Button Content="&#xD;&#xA;Client&#xD;&#xA;" HorizontalAlignment="Left" Height="68" Margin="113,147,0,0" VerticalAlignment="Top" Width="185" Foreground="White" Cursor="Hand" Click="Obisnuit_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF3457D1" />
                    <!-- Background color -->
                    <Setter Property="Foreground" Value="White" />
                    <!-- Text color -->
                    <Setter Property="FontSize" Value="16" />
                    <!-- Font size -->
                    <Setter Property="FontWeight" Value="Bold" />
                    <!-- Font weight -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0"
                                    CornerRadius="15">

                                    <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFC50808" />
                            <!-- Set the background color when the mouse is over the button -->
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="5"
                                              Opacity="0.3"
                                              Color="#FF2266EE" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

